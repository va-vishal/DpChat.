<!-- res/drawable/edittext_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:shape="rectangle">
    <solid android:color="#FFFFFF" /> <!-- Background color of the text field -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC"
        tools:ignore="ExtraText" /> <!-- Border color -->
    <corners android:radius="15dp" /> <!-- Corner radius of the border -->
</shape>
